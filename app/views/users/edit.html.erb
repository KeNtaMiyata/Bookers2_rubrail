<!DOCTYPE html>
<html>
<div class="container">
  <div class="row">
    
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class:"mb-4">User Info</h2>
      
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h4><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h4>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <h4>name</h4>
        <%= f.text_field :name, class:"mb-2" %>
      </div>
      
      <div class="form-group">
        <label for="inputImage">ProfileImage</label></br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"mb-2" %>
      </div>
      
      <div class="form-group">
        <h4>introduction</h4>
        <%= f.text_area :introduction, class:"mb-2" %>
       </div>
      
      <div class="form-group">
        <%= f.submit 'Update User', class:"btn btn-success mb-2" %>
      </div>
      <% end %>
             
    </div>
  </div>
</div>
</html>